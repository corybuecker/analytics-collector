{
  "type": "object",
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "entity": {
      "type": "string",
      "enum": [
        "page",
        "anchor"
      ]
    },
    "action": {
      "type": "string",
      "enum": [
        "view",
        "click"
      ]
    },
    "path": {
      "type": "string"
    }
  },
  "required": [
    "entity",
    "action"
  ],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "entity": {
            "const": "page"
          }
        }
      },
      "then": {
        "properties": {
          "action": {
            "const": "view"
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "entity": {
            "const": "anchor"
          }
        }
      },
      "then": {
        "properties": {
          "action": {
            "const": "click"
          }
        }
      }
    }
  ]
}